<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css" />
<div class="row">
  <div class="col-md-6 col-sm-12">
    <div class="card mb-5">
      <img src="<%= campground.image%>"" class="card-img-top" alt="...">
      <div class="card-body">
        <h4 class="card-title"><%= campground.title %></h4>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-secondary"><%= campground.location %></li>
        <li class="list-group-item">Â£<%= campground.price %> per night</li>
      </ul>
      <% if(currentUser && (campground.author.equals(currentUser._id) ||
      currentUser.username==="Admin" )) { %>
      <div class="card-body">
        <a
          class="card-link btn btn-warning"
          href="/campgrounds/<%= campground._id %>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%= campground._id%>?_method=DELETE"
          method="POST"
        >
          <button class="card-link btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
      <div class="card-footer text-secondary">
        Submitted by <% if(campground.author) {%>
        <span><%= campground.author.username %></span> <% } %>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <% if(currentUser) { %>
    <h3>Leave a review</h3>
    <form
      class="mb-3 validated-form"
      action="/campgrounds/<%=campground.id %>/reviews"
      method="POST"
      novalidate
    >
      <div class="mb-2">
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-2">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %>
    <h3>Reviews</h3>
    <% if(!campground.reviews.length) { %> There are no reviews yet! <% } %> <% for(let
    review of campground.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h3>
          Rating:
          <span class="card-title starability-result" data-rating="<%=review.rating%>">
            Rated: <%=review.rating%> stars
          </span>
        </h3>

        <p class="card-text">Review: <%=review.body%></p>
        <form
          class="d-inline"
          action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="POST"
        >
          <% if(currentUser && (review.author.equals(currentUser._id) ||
          currentUser.username==="Admin" )) { %>
          <button class="btn btn-sm btn-danger">Delete</button>
          <% } %> Owner: <%=review.author.username%>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
