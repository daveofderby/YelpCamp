<% layout('layouts/boilerplate')%>
<h1>All Campgrounds</h1>
<a href="/campgrounds/new">Add</a>

<% for (let campground of campgrounds){%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="<%=campground.image%>" alt="" class="img-fluid" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">
          <a href="/campgrounds/<%=campground._id%>"><%=campground.title%></a>
        </h5>
        <p class="card-title"><%=campground.description%></p>
        <p class="card-title">
          <small class="text-secondary"><%=campground.location%></small>
        </p>
      </div>
    </div>
  </div>
</div>

<% } %>
