<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Register User</h1>
  <div class="col-10 offset-1 mb-3">
    <form
      class="d-inline validated-form"
      action="/register"
      method="POST"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input
          class="form-control"
          type="text"
          id="username"
          name="username"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input
          class="form-control"
          type="email"
          id="email"
          name="email"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input
          class="form-control"
          type="password"
          id="password"
          name="password"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="card-link btn btn-success">Register</button>
    </form>
    <a class="card-link btn btn-warning" href="/">Cancel</a>
  </div>
</div>
